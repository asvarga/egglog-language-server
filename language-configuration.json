{
	"comments": {
		"lineComment": ";",
		"blockComment": [
			"",
			""
		]
	},
	"brackets": [
		[
			"(",
			")"
		],
		[
			"[",
			"]"
		]
	],
	"autoClosingPairs": [
		[
			"(",
			")"
		],
		[
			"[",
			"]"
		],
		[
			"\"",
			"\""
		]
	],
	"surroundingPairs": [
		[
			"(",
			")"
		],
		[
			"[",
			"]"
		],
		[
			"\"",
			"\""
		]
	],
	"wordPattern": "([a-zA-Z][a-zA-Z0-9_-]*|[-+*/?!=<>&|^/%_]+|`|,)",
	"onEnterRules": [
		{
			"beforeText": "^\\s*\\(",
			"action": {
				"indent": "indent"
			}
		},
		{
			"beforeText": "^\\s*\\)",
			"action": {
				"indent": "outdent"
			}
		}
	]
}